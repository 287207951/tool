/* 按钮  */

.btn {
  padding: 0;
  color: #999;
  background: white;
  font-size: 28rpx;
  border: 1px solid #e6e6e6;
  width: 250rpx;
  border-radius: 50rpx;
}

.btn.disabled {
  color: #999;
  background: #e6e6e6;
}

.btn::after {
  border: none;
}

.btn:active {
  opacity: 0.8;
}

.btn-default {
  font-size: 32rpx;
  width: 100%;
  line-height: 98rpx;
  color: white;
  border-radius: inherit;
  background: #a71c20;
  border: none;
}

.btn-class1 {
  width: 160rpx;
  text-align: center;
  line-height: 50rpx;
  color: #fff;
  font-size: 24rpx;
  background: #A71C20;
  border-radius: 30rpx;
}

