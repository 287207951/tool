.addr-wrap {
  display: flex;
  flex-direction: column;
  align-content: space-between;
  position: fixed;
  top: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .3);
}

.addr-con {
  /* height: 206rpx; */
  height: 100%;
}

.tit {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  line-height: 98rpx;
  background: #f5f5f5;
}

.t-left {
  display: flex;
}

.t-left > view {
  padding: 0 20rpx;
  margin-right: 40rpx;
}

.t-left > view:first-child {
  margin-left: -20rpx; 
}

.item {
  line-height: 98rpx;
}

.list {
  padding: 0 40rpx;
  background: #fff
}

.add-cont {
  flex: 1;
  background: #fff
}

.active::after {
  content: '';
  display: block;
  width: 120%;
  margin-left: -10%;
  border-bottom: 2px solid #A71C20
}

.on:active {
  color: #A71C20
}
